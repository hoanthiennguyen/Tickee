                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày 02/10/2019"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/s1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Không chỉ mang lại làn gió mới về nội dung, bộ phim còn hấp dẫn bởi quy tụ nhiều ngôi sao đình đám, đặc biệt là sự góp mặt của nàng “Lọ Lem” Lily James và nam ca sĩ nổi tiếng Ed Sheeran."/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/new1_1"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="5dp"/>
