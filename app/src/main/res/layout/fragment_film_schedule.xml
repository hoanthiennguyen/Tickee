<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


    </LinearLayout>


    <include layout="@layout/list_of_day"></include>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cinemaContainer"
        android:layout_below="@+id/daysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cinemaCNS"
            tools:context=".CinemaShortDescriptionFragment">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/txtCinemaCNS"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/CNS"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNS" />

            <TextView

                android:id="@+id/txtStreetCNS"
                android:textSize="20dp"
                android:layout_toRightOf="@id/txtCinemaCNS"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Lê Lợi" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtDistance"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="1.0 km" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>
        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cinemaLotte"
            tools:context=".CinemaShortDescriptionFragment">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/txtCinemaLotte"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Lotte"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lotte" />

            <TextView

                android:id="@+id/txtStreetLotte"
                android:textSize="20dp"
                android:layout_toRightOf="@id/txtCinemaLotte"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Hai Ba Trung" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtDistanceLotte"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="2.2 km" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>
        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cinemaBHD"
            tools:context=".CinemaShortDescriptionFragment">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/txtCinemaCNS2"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/CNS"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNS" />

            <TextView

                android:id="@+id/txtStreeCNS"
                android:textSize="20dp"
                android:layout_toRightOf="@id/txtCinemaCNS2"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Phạm Văn Đồng" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtDistanceCNS"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:text="2.2 km" />
            <TextView

                android:layout_below="@+id/txtCinemaCNS2"
                android:textSize="30dp"
                android:textColor="@color/time"
                android:text="20:30"
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/separatorLine"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>


        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cinemaMegaCS"
            tools:context=".CinemaShortDescriptionFragment">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/txtCinemaMegaCS"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/BHD"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MegaGS" />

            <TextView

                android:id="@+id/txtStreetMegaGS"
                android:textSize="20dp"
                android:layout_toRightOf="@id/txtCinemaMegaCS"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Ly Thuong Kiet" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtDistanceMegaCS"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="2.5 km" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>