<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.WillPlayFilmFragment"
    android:onClick="onClickSCFilm"
    android:layout_marginTop="20dp">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/faf"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            />
        <TextView
            android:text="C16"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/txtAgeRequired"
            android:background="@drawable/roundbackgroundsmallred"
            android:paddingHorizontal="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/txtDateToBeShowed"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/roundbackgroundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/09"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>