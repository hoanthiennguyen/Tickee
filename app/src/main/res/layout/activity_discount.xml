<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:onClick="onClickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/black"

            android:textSize="24dp"
            android:gravity="center"
            android:text="Khuyến mãi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/prettyWhite"
        android:id="@+id/bookTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">
        <TextView
            android:textSize="40sp"
            android:text="39k/vé CGV -          cuối tuần cực đã"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/zalo"
            android:layout_width="300dp"
            android:layout_height="200dp"/>

        <TextView

            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Thời gian:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/black"
            android:text="Từ 11h sáng ngày 09/10/2019 đến 23h59 ngày 16/10/2019"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Đối tượng:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>


        <TextView android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tất cả khách hàng của Tickee mua vé trong thời gian khuyến mãi và thanh toán qua ZaloPay"
            android:textSize="18dp" />






    </LinearLayout>
</LinearLayout>