<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetailsActivity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:layout_height="wrap_content">

        <TextView

            android:textSize="24dp"
            android:gravity="center"
            android:text="Mua vé thành công"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/header"
        android:id="@+id/bookTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:text="Tên phim: Mắt biếc"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Tên rạp: BHD Quang Trung"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số ghế: C5, C6 (Rạp số 2)"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thời gian chiếu: 20h30 ngày 08/10/2019"
            android:textSize="18dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Mã đặt vé: 0786546435"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tổng tiền :160.000 VND"
            android:textSize="18dp" />

        <TextView
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Mã giao dịch: 19865678212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Địa chỉ: 190 Quang Trung, Phường 10, Gò Vấp, Hồ Chí Minh"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:onClick="onClickMap"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/map"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBackToHome"
        android:background="@color/green"
        android:text="Trang chủ"
        android:layout_alignParentBottom="true"
        android:textSize="22dp" />
</RelativeLayout>