<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:onClick="onClickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/black"

            android:textSize="24dp"
            android:gravity="center"
            android:text="Thông tin đặt vé"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/prettyWhite"
            android:id="@+id/bookTicketLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qrcode"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <TextView

                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Tên phim: Mắt biếc"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/black"
                android:text="Tên rạp: BHD Quang Trung"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số ghế: C5, C6 (Rạp số 2)"
                android:textSize="18dp" />

            <TextView android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Thời gian: 20h30 ngày 08/10/2019"
                android:textSize="18dp" />
            <TextView android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Mã đặt vé: 0786546435"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/black"
                android:id="@+id/textViewTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tổng tiền :160.000 đ"
                android:textSize="18dp" />
            <TextView android:textColor="@color/black"
                android:id="@+id/textTransactionCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mã giao dịch: 25745903"
                android:textSize="18dp" />
            <TextView android:textColor="@color/black"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ: 190 Quang Trung, Phường 10, Gò Vấp, Hồ Chí Minh"
                android:textSize="18dp" />
            <ImageView
                android:onClick="onClickMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/map"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>