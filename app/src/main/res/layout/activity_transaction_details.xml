<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:onClick="onClickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="#000000"

            android:textSize="24dp"
            android:gravity="center"
            android:text="Chi tiết giao dịch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:background="#eeeeee"
        android:id="@+id/bookTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <TextView android:textColor="#000000"
            android:textSize="18sp"
            android:text="Tên phim: Mắt biếc"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="#000000"
            android:text="Tên rạp: BHD Quang Trung"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số ghế: C5, C6 (Rạp số 2)"
            android:textSize="18dp" />

        <TextView android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thời gian chiếu: 20h30 ngày 08/10/2019"
            android:textSize="18dp" />
        <TextView android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Mã vé: 0786546435"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView android:textColor="#000000"
            android:id="@+id/textViewTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tổng tiền :160.000"
            android:textSize="18dp" />
        <TextView android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Phương thức thanh toán: ZaloPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Mã giao dịch: 19865678212"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Thời gian: 18:30 ngày 07/10/2019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </LinearLayout>
</LinearLayout>